{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Godot: Run Project",
      "type": "shell",
      "command": "godot",
      "args": ["--path", "${workspaceFolder}"]
    },
    {
      "label": "Godot: Open Editor",
      "type": "shell",
      "command": "godot",
      "args": ["--editor", "--path", "${workspaceFolder}"]
    },
    {
      "label": "MCP: Start Godot MCP",
      "type": "shell",
      "command": "${workspaceFolder}/.venv/bin/python",
      "args": ["-m", "godot_mcp.server"],
      "isBackground": true
    },
    {
      "label": "Project: Clean Metadata Files",
      "type": "shell",
      "command": "find",
      "args": [
        "${workspaceFolder}",
        "-type",
        "f",
        "(",
        "-name",
        "._*",
        "-o",
        "-name",
        ".DS_Store",
        ")",
        "-delete"
      ]
    },
    {
      "label": "Project: Sanitize + Git Status",
      "type": "shell",
      "command": "bash",
      "args": ["${workspaceFolder}/scripts/dev/sync_sanitize.sh"]
    }
  ]
}
